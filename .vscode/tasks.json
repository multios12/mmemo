{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "yarn-serve",
      "type": "shell",
      "isBackground": true,
      "command": "yarn serve",
      "problemMatcher": {
        "owner": "custom",
        "pattern": {
          "regexp": "^$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "yarn run.*",
          "endsPattern": ".*Compiled successfully in.*"
        }
      }
    }
  ]
}