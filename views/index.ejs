  <!-- アラートメッセージ -->
  <div id="message" class="alert alert-info" role="alert" style="display:none;cursor:pointer;" onclick="closeMessage();">
    <strong>Oh snap!</strong> Change a few things up and try submitting again.
  </div>

  <h2 class="sub-header">History</h2>
  <div id="listSection" class="table-responsive">
    <table id="list" class="table table-striped table-hover">
    </table>
  </div>

  <!-- 2.モーダルの配置 -->
  <div id="editArea" class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form id="editForm" name="editForm" class="form-horizontal" data-toggle="validator" role="form">
          <!-- 4.モーダルのヘッダ -->
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="modal-label">regist</h4>
          </div>
          <!-- 5.モーダルのボディ -->
          <div class="modal-body">
            <input name="_id" type="hidden" />
            <div class="form-group has-feedback">
              <label for="inputName" class="control-label col-sm-1">name:</label>
              <div class="col-sm-11">
                <input type="text" class="form-control input-lg" name="name" id="inputName" size="14" required/>
                <div class="help-block with-errors"></div>
              </div>
            </div>
            <div class="form-group">
              <label for="date" class="control-label col-sm-1">date:</label>
              <div class="col-sm-11">
                <div class="input-group date">
                  <input id="date" name="date" type="text" class="form-control" required>
                  <span class="input-group-addon">
                    <i class="glyphicon glyphicon-th"></i>
                  </span>
                </div>
                <div class="help-block with-errors"></div>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">shop:</label>
              <div class="col-sm-11 form-inline">
                <input type="combo" size="8" name="shoptype" class="form-control col-sm-3" style="width:40%" />
                <input type="text" name="shop" class="form-control col-sm-9" style="width:60%" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">home page:</label>
              <div class="col-sm-11">
                <input type="text" name="homepage" style="font-size:1vmax" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">play:</label>
              <div class="col-sm-11">
                <textarea name="play" class="form-control"></textarea>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">talk:</label>
              <div class="col-sm-11">
                <textarea name="talk" class="form-control"></textarea>
              </div>
            </div>
            <!--
          -->
          </div>
          <!-- 6.モーダルのフッタ -->
          <div class="modal-footer">
              <div class="form-group">
                </div>
                <button id="editOkButton" type="submit" class="btn btn-lg btn-primary">OK</button>
                <button type="button" data-dismiss="modal" class="btn btn-lg btn-default">cancel</button>
              </div>
        </form>
      </div>
    </div>
  </div>

  <!-- 2.モーダルの配置 -->
  <div id="viewArea" class="modal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <!-- 4.モーダルのヘッダ -->
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
          </button>
          <h4 class="modal-title" id="modal-label">edit</h4>
        </div>
        <!-- 5.モーダルのボディ -->
        <div class="modal-body">
          <form id="viewForm" name="viewForm" method="post" class="form-horizontal">
            <input name="_id" type="hidden" />
            <div class="form-group">
              <label class="control-label col-sm-1">name:</label>
              <div class="col-sm-11">
                <p class="form-control-static" id="viewname" size="14"></p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">date:</label>
              <div class="col-sm-11">
                <p class="form-control-static" id="viewdate"></p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">shop:</label>
              <div class="col-sm-11 form-inline">
                <p class="form-control-static col-sm-3" style="width:40%" id="viewshoptype"></p>
                <p class="form-control-static col-sm-9" style="width:60%" id="viewshop"></p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">home page:</label>
              <div class="col-sm-11">
                <p class="form-control-static" id="viewhomepage" style="font-size:1vmax" class="form-control"></p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">play:</label>
              <div class="col-sm-11">
                <p class="form-control-static" id="viewplay" class="form-control"></p>
              </div>
            </div>
            <div class="form-group">
              <label class="control-label col-sm-1">talk:</label>
              <div class="col-sm-11">
                <p class="form-control-static" id="viewtalk"></p>
              </div>
            </div>
          </form>
        </div>
        <!-- 6.モーダルのフッタ -->
        <div class="modal-footer">
          <button type="button" id="editButton" data-dismiss="modal" class="btn btn-lg btn-info" onclick="showEditModal(viewForm._id.value);">edit</button>
          <input type="button" data-dismiss="modal" value="close" class="btn btn-lg btn-default" />
        </div>
      </div>
    </div>
